# Example Terraform Variables File
# Copy this file to terraform.tfvars and customize with your values

# ===================================
# AWS Configuration
# ===================================
aws_region = "us-east-1"

# ===================================
# Project Configuration
# ===================================
project_name = "3tier-iac"
environment  = "dev"
owner        = "your_name"

# ===================================
# Network Configuration
# ===================================
vpc_cidr                 = "10.0.0.0/16"
availability_zones       = ["us-east-1a", "us-east-1b"]
public_subnet_cidrs      = ["10.0.1.0/24", "10.0.2.0/24"]
private_app_subnet_cidrs = ["10.0.11.0/24", "10.0.12.0/24"]
private_db_subnet_cidrs  = ["10.0.21.0/24", "10.0.22.0/24"]
enable_nat_gateway       = true

# ===================================
# Security Configuration
# ===================================
allowed_cidr_blocks = ["0.0.0.0/0"] # Change to your IP for better security
enable_bastion      = false

# ===================================
# Bastion Configuration (if enabled)
# ===================================
bastion_instance_type = "t3.micro"
bastion_allowed_cidrs = ["0.0.0.0/0"] # Change to your IP: curl ifconfig.me

# ===================================
# Compute Configuration
# ===================================
instance_type        = "t2.micro"
key_name             = ""  # Add your EC2 key pair name here
asg_min_size         = 1
asg_max_size         = 4
asg_desired_capacity = 2

# ===================================
# Database Configuration
# ===================================
# Note: Database password is automatically generated and stored in AWS Secrets Manager
# Note: Database port is automatically determined by the engine (3306 for MySQL, 5432 for PostgreSQL)
db_engine            = "mysql"        # Options: "mysql" or "postgres"
db_engine_version    = "8.0"         # 8.0 for MySQL, 14 or 15 for PostgreSQL
db_instance_class    = "db.t3.micro"
db_allocated_storage = 20            # GB (20-65536)
db_name              = "appdb"       # Must start with a letter, alphanumeric and underscores only
db_username          = "admin"       # 1-16 characters
db_multi_az          = false         # Set to true for production high availability
